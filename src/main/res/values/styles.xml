<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomNoActionBarTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
<!--        USE MATERIAL COMPONENTS RATHER THAN APPCOMBAT TO AVOID CRASHING OF APP-->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
<style name="CustomToolbarStyle">
    <item name="android:textColorPrimary">#FFFFFF</item>
<!--    for setting the color of the text on the toolbar-->
    <item name="android:colorControlNormal">#FFFFFF</item>
<!--    for setting the color of the back butoon on the toolbar-->
</style>
</resources>
